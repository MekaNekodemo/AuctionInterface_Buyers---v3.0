@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Auctioneers Login</h1>
    <p class="lead">Auctions are a fun way to buy all sorts!, want to know about auction lingo? hit the button below</p>
    <p><a href="https://www.liveauctioneers.com/terminology" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>


@using (Html.BeginForm("SellersPage", "Auctioneer"))
{

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label>Email: </label>
                @Html.TextBox("Email")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="log in" class="btn btn-secondary" />
            </div>
        </div>

    </div>
}

